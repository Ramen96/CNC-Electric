---
import { Zap, Building, Factory, Car, Sun } from '@lucide/astro';

const services = [
  {
    title: "Residential Electrical",
    description: "Complete electrical services for homes including wiring, panel upgrades, and smart home installations.",
    icon: Zap,
  },
  {
    title: "Commercial Electrical",
    description: "Professional electrical solutions for businesses, offices, and commercial properties.",
    icon: Building,
  },
  {
    title: "Industrial Electrical",
    description: "Heavy-duty electrical systems for manufacturing, warehouses, and industrial facilities.",
    icon: Factory,
  },
  {
    title: "EV Installations",
    description: "Electric vehicle charging station installation for homes and businesses.",
    icon: Car,
  },
  {
    title: "Solar Panel Installation",
    description: "Complete solar energy systems from design to installation and maintenance.",
    icon: Sun,
  },
];
---

<section
  id="services"
  class="flex justify-center items-center bg-gray-950 py-16 overflow-hidden relative scroll-mt-[80px]"
>
  {/* Background Effects */}
  <div class="absolute inset-0 overflow-hidden opacity-40">
    <div class="absolute inset-0 bg-[linear-gradient(45deg,transparent_24%,rgba(255,255,255,0.05)_25%,rgba(255,255,255,0.05)_26%,transparent_27%,transparent_74%,rgba(255,255,255,0.05)_75%,rgba(255,255,255,0.05)_76%,transparent_77%)] bg-[length:40px_40px]" />
    <div class="absolute -left-20 -top-20 w-64 h-64 rounded-full bg-yellow-500/10 blur-3xl animate-pulse" />
    <div class="absolute right-20 bottom-40 w-80 h-80 rounded-full bg-yellow-600/10 blur-3xl animate-pulse [animation-delay:1s]" />
    <div class="absolute left-1/2 top-1/3 w-72 h-72 rounded-full bg-yellow-500/10 blur-3xl animate-pulse [animation-delay:2s]" />
  </div>

  <div class="container mx-auto px-6 relative z-10">

    {/* Header */}
    <div class="flex flex-col items-center mb-10">
      <div class="reveal inline-block px-4 py-1 rounded-full bg-yellow-500/10 backdrop-blur-sm border border-yellow-500/20 mb-4">
        <span class="text-yellow-400 font-medium">What We Offer</span>
      </div>

      <h2 class="reveal text-5xl font-bold mb-4 text-center" style="transition-delay: 0.1s">
        <span class="bg-linear-to-r from-yellow-300 via-yellow-400 to-yellow-600 text-transparent bg-clip-text">
          Our Expert Services
        </span>
      </h2>

      <div class="reveal h-1 bg-linear-to-r from-yellow-400 to-yellow-600 rounded mb-6 w-20" style="transition-delay: 0.2s" />

      <p class="reveal text-gray-300 text-center max-w-xl" style="transition-delay: 0.3s">
        Discover our comprehensive range of electrical services designed to meet your specific needs with professionalism and expertise.
      </p>
    </div>

    {/* Service Cards */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service, index) => (
        <div
          class="reveal group relative p-5 rounded-2xl overflow-hidden backdrop-blur-sm border border-yellow-500/20 shadow-xl shadow-yellow-600/10 transition-all duration-300 hover:-translate-y-2"
          style={`transition-delay: ${0.1 + index * 0.1}s`}
        >
          <div class="absolute inset-0 bg-black/60 backdrop-blur-lg opacity-80 group-hover:opacity-100 transition-opacity duration-300" />
          <div class="absolute inset-0 bg-linear-to-br from-yellow-400 to-yellow-600 opacity-0 group-hover:opacity-15 transition-opacity duration-500" />

          <div class="relative z-10">
            <div class="flex justify-center mb-4">
              <div class="p-3 rounded-2xl bg-yellow-500/10 border border-yellow-500/20 shadow-lg shadow-yellow-600/10 transition-transform duration-300 group-hover:scale-110">
                <div class="text-yellow-400 transition-transform duration-300 group-hover:rotate-12">
                  <service.icon class="w-8 h-8" />
                </div>
              </div>
            </div>

            <h3 class="text-xl font-bold mb-2 text-center text-yellow-400">
              {service.title}
            </h3>
            <p class="text-gray-300 text-center leading-relaxed mb-4 text-sm">
              {service.description}
            </p>

            <div class="flex justify-center">
              <button class="get-estimate-btn group/btn relative overflow-hidden cursor-pointer px-6 py-2 rounded-full bg-black text-yellow-400 font-medium text-sm flex items-center border-2 border-yellow-500/50 shadow-lg shadow-yellow-600/20 hover:bg-linear-to-r hover:from-yellow-600 hover:to-yellow-500 hover:text-black transition-all duration-300">
                <span class="relative z-10">Get an Estimate</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="relative z-10 h-4 w-4 ml-2 group-hover/btn:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      ))}
    </div>

    {/* Bottom CTA */}
    <div class="reveal mt-10 text-center" style="transition-delay: 0.6s">
      <button
        id="services-cta"
        class="relative overflow-hidden cursor-pointer group/cta px-8 py-4 rounded-xl bg-black text-yellow-400 font-semibold border-2 border-yellow-500/50 shadow-lg shadow-yellow-600/20 inline-flex items-center hover:-translate-y-1 hover:bg-linear-to-r hover:from-yellow-600 hover:to-yellow-500 hover:text-black transition-all duration-300"
      >
        <span class="relative z-10 flex items-center">
          Get an Estimate
          <svg class="w-5 h-5 ml-2 group-hover/cta:translate-x-2 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </span>
      </button>
    </div>

  </div>
</section>

<script>
  import { initReveal } from "../utils/reveal";
  initReveal("#services");

  const scrollToContact = () => {
    document.getElementById("contact")?.scrollIntoView({ behavior: "smooth" });
  };

  document.getElementById("services-cta")?.addEventListener("click", scrollToContact);
  document.querySelectorAll(".get-estimate-btn").forEach((btn) => {
    btn.addEventListener("click", scrollToContact);
  });
</script>
