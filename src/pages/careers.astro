---
import ApplicationForm from "../components/applicationForm";
import logo from "../assets/cncelectricco-logo.png";
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout title="Careers">
  <nav class="bg-gradient-to-r from-black via-gray-900 to-black shadow-2xl border-b border-yellow-500/30">
    <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-10">
      <div class="flex items-center justify-between h-24">
        <a
          href="/"
          class="group relative p-4 rounded-xl bg-gradient-to-br from-yellow-500/20 to-yellow-600/10 hover:from-yellow-500/30 hover:to-yellow-600/20 text-yellow-400 hover:text-yellow-300 transition-all duration-300 hover:scale-110 hover:shadow-lg hover:shadow-yellow-500/20"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          <div class="absolute inset-0 rounded-xl bg-gradient-to-br from-yellow-500/0 to-yellow-600/0 group-hover:from-yellow-500/10 group-hover:to-yellow-600/5 transition-all duration-300" />
        </a>
        <div class="flex items-center space-x-6">
          <div class="relative">
            <div class="w-12 h-12 rounded-full overflow-hidden shadow-lg shadow-yellow-500/25 rotate-3 hover:rotate-0 transition-transform duration-300">
              <img
                src={logo.src}
                alt="C&C Electric Logo"
                class="w-full h-full object-cover"
              />
            </div>
            <div class="absolute -inset-1 bg-gradient-to-br from-yellow-400/20 to-yellow-600/20 rounded-full blur opacity-75" />
          </div>
          <div class="relative">
            <h1 class="text-3xl font-black text-transparent bg-gradient-to-r from-yellow-400 via-yellow-300 to-yellow-500 bg-clip-text tracking-wide">
              Careers
            </h1>
            <div class="absolute -bottom-1 left-0 w-full h-px bg-gradient-to-r from-transparent via-yellow-400/50 to-transparent" />
          </div>
        </div>
      </div>
    </div>
  </nav>
  <ApplicationForm client:load />
</Layout>
